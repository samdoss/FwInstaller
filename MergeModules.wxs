			<Merge Id="CRT" Language="1033" SourceFile="ExternalMergeModules\Microsoft_VC120_CRT_x64.msm" DiskId="1"/>
			<Merge Id="MFC" Language="1033" SourceFile="ExternalMergeModules\Microsoft_VC120_MFC_x64.msm" DiskId="1"/>
