<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Module Id="Set_PATH_Environment_Variable" Language="0" Version="1.0">
		<Package Id="CE24DB4B-6A1C-4BEC-91A8-432FB75AECE7" Keywords="MergeModule, MSI, PATH" Description="Sets the PATH Environment variable for Encoding Converters" Manufacturer="SIL International" InstallerVersion="110" Languages="0" SummaryCodepage="1252" />
		<Directory Id="TARGETDIR" Name="SourceDir">
				<?if $(var.Platform) = x64 ?>
					<Directory Id="CommonFiles64Folder" SourceName="Common Files Folder">
						<Component Id="PATH" Guid="{0A0ABCDA-A90F-4207-818C-19C2FB83BA09}">
							<Environment Id="PATH" Name="PATH" Action="set" System="yes" Part="first" Value="[CommonFiles64Folder]SIL" />
							<!-- The next item is junk to make validation pass on ICE18. -->
							<CreateFolder/>
						</Component>
					</Directory>
				<?else ?>
					<Directory Id="CommonFilesFolder" SourceName="Common Files Folder">
						<Component Id="PATH" Guid="{0A0ABCDA-A90F-4207-818C-19C2FB83BA09}">
							<Environment Id="PATH" Name="PATH" Action="set" System="yes" Part="first" Value="[CommonFilesFolder]SIL" />
							<!-- The next item is junk to make validation pass on ICE18. -->
							<CreateFolder/>
						</Component>
					</Directory>
				<?endif ?>
		</Directory>
	</Module>
</Wix>